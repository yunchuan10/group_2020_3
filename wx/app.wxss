/**app.wxss**/
/* 公共的样式--框架 */
navigator:hover{background: #fff;}
page{
  background-color: #F5F5F5;
  max-height: 100%;
  font-family:PingFangSC-Medium,-apple-system-font,Helvetica Neue,Helvetica,sans-serif; 
  font-size:27rpx;
  color:#111;
  line-height:1.2;
}
/*距离外侧距离*/
.c-padding{
  padding: 0 40rpx;
}
/*隐藏和显示*/
.show{
  display: block;
}
.hide{
  display: none;
}


/*黑色背景层*/
.bg-drawer{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 8000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
/* 超出... */
.ellipsis{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.ellipsis2{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
