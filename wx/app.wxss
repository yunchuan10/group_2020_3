/* 按钮可点击状态 */
page .button-able{
  border: none;
  border-color: #2C8CFF;
  background:linear-gradient(180deg,#19B3FF 0%,#2A94FF 100%);
}

button{
  padding: 0;
}
.bott-line{
  font-size: 27rpx;
  text-align: center;
  padding:  40rpx 0;
  /* background: #fff; */
  color: #999;
}
/* 缺省页面 */
.appointment-default-page{
  padding: 80rpx 0;
}
.appointment-default-content{
  text-align: center;
  margin: 0 auto;
  display: flex;
  flex-direction: column
}
.appointment-default-text{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:36rpx;
  text-align: center;
  display: block
}
.appointment-default-img{
  width: 267rpx;
  height: 267rpx;
  margin: 0 auto
}
/*公开课隐藏*/
.c-open-display{
  display: none;
}