/**头部导航**/
page{
  background-color: #fff;
}
.course-navs{
  margin: 2rpx 0;
  background: #fff;
  min-height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0 40rpx 0;
}
.course-item{
  text-align: center; 
  width: 25%; 
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.course-item text{
  color: #494949
}
.course-item image{
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 16rpx;
}
/* 精品区 */
.course-jin{
  background: #fff;
}
.jin-head{
  /* height: 60rpx; */
  display: flex;
  padding: 40rpx 40rpx 30rpx;
  justify-content: space-between;
  align-items: center;
}
.jin-head text{
  font-size: 40rpx;
  font-weight: 700;
  color: #494949
}
.jin-head navigator{
  font-size: 24rpx;
  color: #999;
  height: 100%;
  line-height: 90rpx;
}
/* 精品课循环 */
.my-collection{
  display: block;
}
.my-content-title{
  /* display: flex; */
  font-size: 36rpx;
  color: #494949;
  min-height: 60rpx;
}

.my-collection{
  padding: 0 40rpx;
}
.my-content{
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 40rpx  30rpx 20rpx 30rpx;
  box-shadow: 0 4rpx 32rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  background: #fff;
  margin-bottom: 40rpx;
}
.my-collection .my-content+.my-content{
  border-top: 1px solid #EAEAEA;
}
.my-content-content{
  height:40rpx;
  line-height: 46rpx;
  margin-left: 15rpx;
}
.my-content-icon{
  /* width:68rpx; */
  padding: 0 18rpx;
  height:40rpx;
  line-height: 44rpx!important;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  background:rgba(222,222,222,0.3);
  /* border:1rpx solid #DEDEDE; */
  border-radius:5rpx;
  position: relative;
  top: -4rpx;
  margin-left: 5rpx;
  margin-right: 10rpx;
}
.my-content-name{
  font-weight: bold;
  margin: 20rpx 0 20rpx 0;
  /* 强制两行显示 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.my-content-center{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx ;
}
.my-content-left{
  font-size:24rpx ;
  color: #999;
  line-height:40rpx ;
  height: 40rpx;

}
.content-right-icon{
  font-size:24rpx ;
  color: #555;
  line-height:40rpx ;
  height: 40rpx;
  vertical-align: bottom;
  text-decoration: line-through;
  text-decoration-color: #555;
  margin-right: 5rpx;
}
.content-right-money{
  font-size:24rpx ;
  color: #555;
  text-decoration: line-through;
  text-decoration-color: #555
}
.my-content-right{
  text-decoration: line-through;
  text-decoration-color: #555;
}
.my-footer{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  /* border-top: 1rpx solid rgba(221,221,221,1); */
  min-height: 80rpx;
  align-items: center;
}
.my-footer-left{
  font-size:24rpx ;
  color: #999;
  line-height:40rpx ;
  min-height: 40rpx;
  margin-left: 2rpx;
  display: flex
}
.my-footer-teacher{
  display: flex;
  flex-direction: column;
  /* margin-right: 40rpx; */
  justify-content: space-between;
  margin-right: 20rpx
  
}
.my-footer-img{
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  align-self: center
}
.my-teacher-name{
  max-width: 120rpx;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  text-align: center
}
.my-footer-right{
  color: #111;
  display: flex;
  flex-direction: column
}
.my-footer-tops{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 0rpx;
  margin-top: 15rpx;
}
.footer-right-icon{
  font-size: 24rpx;
  line-height: 70rpx;
  color: #FF7549;
  font-weight: 700;
  margin-right: 10rpx;
  height: 30rpx
}
.footer-right-money{
  font-size: 50rpx;
  height:50rpx ;
  line-height:50rpx;
  color: #FF7549;
  font-weight: 700
}
/* 公开课 */
.course-open{
  background: #fff;
  margin-top: 20rpx;
  padding: 40rpx 40rpx 5rpx 40rpx;
}
.course-open-top{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  margin: 10rpx 0 45rpx 0;
}
.open-class{
  font-size: 40rpx;
  color: #111;
  font-weight:700;
}
.open-more{
  color: #999;
  font-size: 24rpx;
}
.open-more text{
  margin-left: 10rpx; 
}
/*公开课详情*/
.open-course{
  height: 140rpx;
  display: flex;
  margin-bottom: 65rpx;
}
.course-open-img{
  position: relative;
  float: left;
}
.course-tag{
  position: absolute;
  top: 6rpx;
  left: 10rpx;
  background: #FF9900;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 6rpx;
}
.open-course .class-img{
  width: 200rpx;
  height: 140rpx;
  border-radius:13rpx;
}
.open-right{
  margin-left: 20rpx;
  width: 450rpx;
  float: left;
}
.open-name{
  font-size: 30rpx;
  color: #494949;
  font-weight: 700;
  height: 85rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height:42rpx;
}
.open-footer{
  display: flex;
  justify-content: space-between;
  margin-top: 27rpx;
}
.open-time{
  font-size:20rpx;
  color: #555;
}
.open-number{
  font-size:20rpx;
  color: #999;
}
/*formid 按钮*/
.chapter-button{
  display: inline-block;
  text-align: left;
  line-height: 1;
  background-color:#fff!important;
  border:#fff!important;
  height: 150rpx;
  width: 670rpx;
}
.chapter-button::after{ border: none; }
