.line-view {
    width: 100%;
    height: 2rpx;
    background: #ddd;
    display: none
}

.default-view {
    display: flex;
    align-items: center;
    justify-content: center;
}



.bottom-button {
    display: flex;
    width: 100%;
    height: 100rpx;
    margin-top: 80rpx;
    border-radius: 8rpx
}

.bottom-button text {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    margin: 0 40rpx;
    border-radius: 8rpx
}


.bottom-button .save {
    color: #fff;
    background: #2C8CFF;
}

/*省市区picker-view样式*/
.picker-view-container {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 100%;
    bottom: 0;
    background: #ffffff;
}

.picker-view-title {
    display: flex;
    width: 100%;
    height: 80rpx;
    background: #ddd;
    align-items: center;
    justify-content: space-between;
}

.picker-view-title text {
    font-size: 28rpx;
    color: #494949;
    padding:0 15rpx;
    line-height:80rpx;
    display:block;
    height:100%;

}

.area-picker-view {
    width: 100%; 
    height: 400rpx;
    font-size: 28rpx;
    color: #494949;
    background: #fff;
}

.area-indicator-class {
    height: 100rpx;
}

.picker-view-column {
    line-height: 100rpx;
    text-align: center;
}

