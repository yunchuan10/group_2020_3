.address-add-view{
  margin-top: 40rpx;
  /* background: #fff; */
}
.item-view{
    display: flex;
    align-items: center;
    padding: 0rpx 40rpx 0 40rpx;
    position: relative;
    border-bottom: 1rpx solid #ddd;
    background: #fff
}
.item-view-last{
  border: 0;
  
  min-height: 120rpx
}
textarea{
  width: 90%;
  font-size: 28rpx;
  color: #494949!important;
}
.item-view input {
    font-size: 28rpx;
    color: #494949;
    width: 100%;
    height: 124rpx;
    vertical-align: middle;
    display: inline-block
}
/* input 提示文字 */
.item-view input::-webkit-input-placeholder { color: #999;font-size: 28rpx;}

.item-view input::-moz-placeholder { color: #999;font-size: 28rpx;}

.item-view input::-moz-placeholder{ color: #999;font-size: 28rpx;}

.item-view input::-ms-input-placeholder{ color: #999;font-size: 28rpx;}

.item-view text {
    /* font-size: 32rpx; */
    color: #494949;
    width: 100%;
}

.item-view .choose-area {
    /* margin-left: 20rpx; */
    font-size: 28rpx;
    color: #999;
    line-height: 120rpx

}

.item-view .address-text {
    font-size: 28rpx;
    color: #494949;
    flex: 1;
    line-height: 124rpx;
    white-space: nowrap;
    width: 100%;
}

.item-view .jump-img {
  width:12rpx ;
  height: 23rpx;
  position:absolute;
  top:0;
  bottom:0;
  margin:auto;
  right:40rpx;
}


