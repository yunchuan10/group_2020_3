/* pages/myCollection/myCollection.wxss */
.my-collection{
  margin-top: 40rpx;
}
.my-content{
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 40rpx  30rpx 20rpx 30rpx;
  box-shadow: 0 4rpx 32rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  background: #fff;
  margin-bottom: 40rpx;
}
.my-content-title{
  /* display: flex; */
  font-size: 36rpx;
  color: #494949;
  min-height: 60rpx;
}

.my-collection{
  padding: 0 40rpx;
}
.my-content-icon{
  /* width:68rpx; */
  padding: 0 18rpx;
  height:40rpx;
  line-height: 44rpx!important;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  color: #999;
  background:rgba(222,222,222,0.3);
  /* border:1rpx solid #DEDEDE; */
  border-radius:5rpx;
  position: relative;
  top: -4rpx;
  margin-left: 5rpx;
  margin-right: 10rpx;
}
.my-content-name{
  font-weight: bold;
  margin: 20rpx 0 20rpx 0;
  /* 强制两行显示 */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.my-content-center{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx ;
}
.my-content-left{
  font-size:24rpx ;
  color: #999;
  line-height:40rpx ;
  height: 40rpx;

}
.content-right-icon{
  font-size:24rpx ;
  color: #555;
  line-height:40rpx ;
  height: 40rpx;
  vertical-align: bottom;
  text-decoration: line-through;
  text-decoration-color: #555;
  margin-right: 5rpx;
}
.content-right-money{
  font-size:24rpx ;
  color: #555;
  text-decoration: line-through;
  text-decoration-color: #555
}
.my-content-right{
  text-decoration: line-through;
  text-decoration-color: #555;
}
.my-footer{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  /* border-top: 1rpx solid rgba(221,221,221,1); */
  min-height: 80rpx;
  align-items: center;
}
.my-footer-left{
  font-size:24rpx ;
  color: #999;
  line-height:40rpx ;
  min-height: 40rpx;
  margin-left: 2rpx;
  display: flex
}
.my-footer-teacher{
  display: flex;
  flex-direction: column;
  /* margin-right: 40rpx; */
  justify-content: space-between;
  margin-right: 20rpx;
  
}
.my-footer-img{
  width: 53rpx;
  height: 53rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  align-self: center
}
.my-teacher-name{
  max-width: 120rpx;
  overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  text-align: center
  
}
.my-footer-right{
  color: #111;
  display: flex;
  flex-direction: column
}
.my-footer-tops{
  display: flex;
  justify-content: flex-end;
  margin-bottom: 0rpx;
  margin-top: 15rpx
}
.footer-right-icon{
  font-size: 24rpx;
  /* height: 50rpx; */
  line-height: 70rpx;
  height: 30rpx;
  color: #FF7549;
  font-weight: 700;
  margin-right: 10rpx
}
.footer-right-money{
  font-size: 50rpx;
  height:50rpx ;
  line-height:50rpx;
  color: #FF7549;
  font-weight: 700
}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 12px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #888;
}

/* 加载完毕 到底提示 */
.collection-end-title{
  text-align: center;
  color: #999;
  font-size: 24rpx;
  width: 100%;
  padding: 47rpx 0 37rpx 0;
}
/* 缺省页面 */
.collection-default-page{
  width: 100%;
  height: 100%;
  position: relative
}
.collection-default-content{
  width:268rpx ;
  height: 336rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,50%);
  display: flex;
  flex-direction: column
}
.collection-default-text{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:36rpx;
  text-align: center;
  display: block
}
.collection-default-img{
  width: 267rpx;
  height: 267rpx;
}
.scroll-view{
  width: 100%;
  height: 100%;
}

