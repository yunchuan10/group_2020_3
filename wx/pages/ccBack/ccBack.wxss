.bottom {
    display: flex;
    background:rgba(0,0,0,0.5);
    height:70rpx;
    align-items: center;
    padding: 5rpx 10rpx;
    box-sizing: border-box;
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 9999;
    left: 0;
}

.bottom cover-image{
    width: 60rpx;
    height: 60rpx;
}

/*播放*/
.bottom .playBtn-box {
    flex:1.2;
    margin-right: 10rpx;
}

/*时间*/
.bottom .time-box{
    flex:6.5;
    display: flex;
    justify-content: center;
    vertical-align: middle;
    width: 200rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.bottom .time-box .time-current{
    font-size:26rpx;
    color:#fff;
}

.bottom .time-box .time-duration{
    font-size:26rpx;
    color:rgba(255,255,255,0.6);
}

/*进度条*/
.bottom .loadingbar-box{
    flex:10;
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.bottom .loadingbar-box .loadingbar{
    height: 32rpx;
    /*width: 395rpx;*/
    width: 100%;
    display: flex;
    align-items: center;
    position: relative;
}

.bottom .loadingbar-box .loadingbar .background{
    height: 6rpx;
    width: 100%;
    background:rgba(255,255,255,0.8);
    margin-left: -16rpx;
}

.bottom .loadingbar-box .loadingbar .background .progress{
    background:#2C8CFF;
    width:0%;
    height:100%;
    margin-left: -14rpx;
}

.bottom .loadingbar-box .loadingbar .circle-box{
    position: relative;
    /*left:0rpx;*/
    z-index: 99;
    width:32rpx;
    height:32rpx;
}

.bottom .loadingbar-box .loadingbar .circle{
    width:32rpx;
    height:32rpx;
    position: relative;
    z-index: 99;
}

/*全屏*/
.bottom .fullscreenBtn-box {
    flex:1.5;
}





