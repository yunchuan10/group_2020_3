
.order-pay{
  padding-bottom: 180rpx;
}

.pay-title{
  padding: 52rpx 0 35rpx 40rpx;
  color: #111;
  font-size: 40rpx;
}

/* 请选择问题类型 */
.type-box{
  display: flex;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 27rpx;
}
.type-box+.type-box{
  border-top: 1rpx solid #EFEFF4;
}

.type-box-r{
  width: 34rpx;
  height: 34rpx;
}

.qs-texta{
  display: block;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  padding: 30rpx 40rpx;
  height: 300rpx;
}

.pay-btn{
  padding: 32rpx 40rpx;
  text-align: center;
  position: fixed;
  z-index: 9;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  height: 150rpx;
}

.pay-btn button{
  color: #fff;
  font-size: 36rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 44rpx;
  border: 0 none;
  width: 100%;
}

.ph-tips{
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  font-size: 20rpx;
  color: #555;
  vertical-align: middle;
}

.ph-tips>text{
  color: #F43530;
}

.pay-ph{
  flex: 1;
  font-size: 24rpx;
  color: #555;
  margin-right: 40rpx;
}

