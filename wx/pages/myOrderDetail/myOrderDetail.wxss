/* pages/myOrderDetail/myOrderDetail.wxss */
.my-detail{
  display: block;
  padding: 0 40rpx;
  margin: 40rpx 0 76rpx 0;
}
/* 内容区 */
.detail-content{
  background: #fff;
  display: block;
  position: relative
}
/* 内容区 顶部 */
.detail-content-top{
  padding:53rpx 40rpx 53rpx 40rpx;
  display: flex;
}
.detail-top-left{
  width:200rpx ;
  height: 140rpx;
  margin-right: 30rpx;

}
.detail-top-img{
  width: 100%;
  height: 100%;
}
.detail-top-right{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-top-title{
  min-width:360rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(17,17,17,1);
  line-height:37rpx;
  /* 显示省略号 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 75%;
}
.detail-top-content{
  display: flex;
  justify-content: flex-end;
}
.detail-top-price{
  color: #FE5B59;
  font-size:32rpx;
}
/* 内容去 中部 */
.detail-content-center{
    display: flex;
    flex-direction: column;
    padding: 0 40rpx 35rpx 40rpx;
}
.detail-center-seal{
  display: flex;
  justify-content: flex-end;
  margin-top: 23rpx;
}
.detail-center-btn{
  line-height: 56rpx;
  text-align: center;
  color: #555;
  width:140rpx;
  height:56rpx;
  font-size: 24rpx;
  background:rgba(255,255,255,1);
  border-radius:4px;
  border:1px solid rgba(204,204,204,1);
}
/* 内容去 底部 */
.detail-content-bottom{
    display: flex;
    flex-direction: column;
    padding: 0 40rpx 50rpx 40rpx;
}
.detail-bottom-pay,.detail-center-message{
  font-size:36rpx ;
  line-height: 130rpx;
  color: #494949;
  font-weight: 700;
}
.detail-bottom-title,.detail-center-title{
  display: flex;
  justify-content: space-between;
  min-height: 70rpx;
  align-items: center;
}
.detail-bottom-left,.detail-bottom-right,.detail-center-left,.detail-center-right{
  font-size:24rpx ;
  color: #494949;
}
.detail-bottom-right-tit{
  width: 70%;
  text-align: right
}
.detail-right-type{
  font-size:24rpx ;
  color: #2C8CFF;
}
.detail-right-red{
  font-size:32rpx ;
  color: #FE5B59;
}
.detail-bottom-notification{
  font-size:24rpx ;
  line-height: 34rpx;
  color: #2C8CFF;
  margin-top: 43rpx;
  text-align: center;
  display: block;
  width: 100%
}
/* 虚线 */
.detail-line-center{
  padding: 0 40rpx;
}
.detail-line{
  height: 1rpx;
  border-bottom: 1rpx  dashed rgba(153,153,153,1);
}
/* 虚线二 */
.detail-line-top{
  display: flex;
  justify-content: space-between
}
.detail-circle_left,.detail-circle_right{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #f5f5f5;
}
.detail-circle_left{
  position: relative;
  left: -13rpx;
  top:-13rpx;
}
.detail-circle_right{
  position: relative;
  right: -13rpx;
  top:-13rpx;
}
.detail-line_1{
  height: 1rpx;
  border-bottom: 1rpx  dashed rgba(153,153,153,1);
  width: 90%;
}
/* 印章部分 */
.detail-bottom-seal{
  width:288rpx ;
  height: 292rpx;
  position: absolute;
  bottom: 0;
  right: 0
}
.detail-seal-img{
  width: 100%;
  height: 100%
}
/*取消订单*/
.order-footer-right{
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 0 10rpx 0;
}
.order-btn{
  font-size:24rpx ;
  line-height:56rpx ;
  color: #555;
  padding:0 22rpx;
  height: 56rpx;
  /* margin-top: 14rpx; */
  margin-left: 20rpx;
}
.order-footer-cancel,.order-footer-details{
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  border:2rpx solid rgba(204,204,204,1);
}

.order-footer-pay{
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(126,185,255,1);
  border-radius:4rpx;
  color: #2C8CFF
}