
.order-item{
  margin-top: 20rpx;
}

.order-title{
  background: #fff;
  display: flex;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 40rpx;
  font-size: 24rpx;
  color: #555;
  justify-content: space-between;
  align-items: center;
}

.order-title>view{
  color: #F43530;
  position: relative;
}
.order-state>text{
  position: relative;
  z-index: 6;
}
.order-state>image{
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  top: 0;
  left: -100rpx;
  border: none;
}

/* 商品 */
.product{
  background: #f5f5f5;
  height: 158rpx;
  padding: 32rpx 40rpx 30rpx;
  display: flex;
  align-items: flex-start;
}
.product-l{
  width: 220rpx;
  height: 140rpx;
  line-height: 140rpx;
  font-size: 0;
  text-align: center;
  border-radius: 12rpx;
  overflow: hidden;
  background: #fff;
}
.product-l image{
  width: 100%;
  max-height: 100%;
}

.product-r{
  display: flex;
  height: 100%;
  flex: 1;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}
.product-r-t{
  font-size:27rpx;
  color:rgba(17,17,17,1);
  line-height:37rpx;
}

.product-r-b{
  font-size:24rpx;
  line-height:33rpx;
  text-align: right;
}
.product-r-b>text{
  font-size: 32rpx;
}

/* 底部操作按钮 */
.order-btns{
  display: flex;
  height: 82rpx;
  background: #fff;
  line-height: 82rpx;
  font-size: 24rpx;
  color: #999;
  padding: 0 40rpx;
  justify-content: space-between;
}
.order-btns>view{
  display: inline-flex;
  justify-content: space-between;
  line-height: 82rpx;
  align-items: center;
}
.order-btns button{
  text-align: center;
  width:140rpx;
  height:56rpx;
  line-height: 56rpx;
  border-radius:4rpx;
  border: 1rpx solid #ccc;
  padding: 0 20rpx;
  font-size:24rpx;
  color:#555;
}

.order-btns button+button{
  margin-left: 20rpx;
}

.order-btns .order-pay{
  color: #2C8CFF;
  border-color: #2C8CFF;
}