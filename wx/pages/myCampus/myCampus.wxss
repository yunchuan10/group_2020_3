/* pages/myCampus/myCampus.wxss */
page{
  background-color: #fff;
}
.my-campus{
  display: block
}
.campus-content{
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  padding-bottom: 40rpx
}
.campus-content-wrap{
  width:670rpx;
  height: 456rpx;
  margin-top: 40rpx;
  background: #fff;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 32px 0px rgba(0,0,0,0.1);
  border-radius:8rpx;
  overflow: hidden;
}
.campus-box-image{
  width: 100%;
  height: 308rpx;

}
/* .campus-image{
  width:'' ;
} */
.campus-box-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 34rpx;
  line-height: 34rpx;
  margin: 10rpx 20rpx 30rpx 20rpx;
}
.campus-address{
  margin: 30rpx 0 0 20rpx;
  color: #333;
  font-size: 32rpx;
  min-height: 44rpx;
  line-height: 44rpx; 
}
.campus-box-title{
  color:#999;
  font-size: 24rpx;
  height: 34rpx;
  line-height: 34rpx;
  /* margin: 20rpx 0 0 20rpx; */
}
.campus-box-right{
  display: flex;
  /* margin-right: 27rpx */
}
.campus-box-i{
  display: none;
  width: 28rpx;
  height: 28rpx;
  margin-top: 24rpx;
  margin-right: 7rpx;
}
.campus-box-km{
  font-size:24rpx;
  font-weight:400;
  color:#666;
}