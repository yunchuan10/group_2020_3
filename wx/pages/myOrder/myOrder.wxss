/* pages/myOrder/myOrder.wxss */
.my-order{
  display: block;
  padding: 0 42rpx
}
.order-content{
  position: relative;
  margin-top:20rpx ;
  background: #fff;
  padding-bottom: 40rpx;
  border-radius: 8rpx
}
.order-content-seal{
  width:126rpx ;
  height:104rpx ;
  position: absolute;
  right: 83rpx;
  top: 0
}
.order-seal-img{
  width: 100%;
  height: 100%
}
/* 缺省页面 */
.order-default-page{
  width: 100%;
  height: 100%;
  position: relative
}
.order-default-content{
  width:268rpx ;
  height: 336rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,50%);
  display: flex;
  flex-direction: column
}
.order-default-text{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:36rpx;
  text-align: center;
  display: block
}
.order-default-img{
  width: 267rpx;
  height: 267rpx;
}
/* top 顶部 */
.order-content-top{
  display: flex;
  justify-content: space-between;
  margin:0rpx 40rpx;
  background: #fff;
  border-bottom:1rpx solid rgba(221,221,221,1);
}
.order-top-left{
  font-size:24rpx ;
  color: #555;
  line-height:78rpx ;

}
.order-top-number{
  font-size:24rpx ;
  color: #555;
  line-height:78rpx ;
  display: inline-block
}
.order-top-right{
  display: block;
}
.order-top-state{
  display: inline-block;
  text-align: center;
  line-height:78rpx ;
  color:#2C8CFF ;
  font-size: 24rpx;
}


/* center 中间部分 */
.order-content-center{
  background:#fff;
  height: 140rpx;
  padding:27rpx 40rpx;
  display: flex
}
.order-center-left{
  width:200rpx;
  height:140rpx;
  border-radius:13rpx;
  overflow: hidden;
  margin-right: 27rpx;
}
.order-center-img{
  width: 100%;
  height: 100%;
}
.order-center-right{
  width: 447rpx;
  flex: 1;
}
.order-center-title{
  font-size:28rpx ;
  color: #494949;
  line-height:38rpx ;
  /* height: 74rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}
.order-center-footer{
  margin-top: 17rpx
}
.order-center-wrap{
  display: block;
  font-size: 24rpx;
  color: #494949;
  line-height: 34rpx;
  margin-bottom: 17rpx
}
.order-center-number{
  font-size: 24rpx;
  color: #494949;
  line-height: 34rpx;
}
.order-center-price{
  font-size: 24rpx;
  color: #494949;
  line-height: 34rpx;
}

/* footer 底部 */
.order-content-footer{
  height:84rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx
}
.order-footer-date,.order-footer-time{
  font-size:24rpx ;
  line-height:84rpx ;
  color: #999;
  margin-right: 10rpx
}
.order-footer-right{
  display: flex;
}
.order-btn{
  font-size:24rpx ;
  line-height:56rpx ;
  color: #555;
  padding:0 22rpx;
  height: 56rpx;
  margin-top: 14rpx;
  margin-left: 20rpx;
}
.order-footer-cancel,.order-footer-details{
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  border:2rpx solid rgba(204,204,204,1);
}

.order-footer-pay{
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(126,185,255,1);
  border-radius:4rpx;
  color: #2C8CFF
}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 12px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #888;
}

/* 加载完毕 到底提示 */
.order-end-title{
  text-align: center;
  color: #999;
  font-size: 24rpx;
  width: 100%;
  padding: 47rpx 0 37rpx 0;
}