/* pages/main/index.wxss */
.container-box{background-color: #efeff4;height: 100vh}
.img-box{padding: 32rpx;background-color: #fff;position: relative}
.img-box image{width: 400rpx;height: 400rpx;background-color: #f9f9f9}
.input-row{
    margin: 30rpx auto;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 32rpx; 
    background-color: #fff;
    font-size: 34rpx;
    color: #000
}

.input-row input{margin-left: 100rpx;flex: 1}
.mybtn{width:686rpx;margin: 60rpx auto }
.mask{position: fixed;top: 0;left: 0;z-index: 3; width: 100%;height: 100%;opacity: 0;}
.canvas-box{position: fixed;top:999999rpx;left: 0}



.pay-code{
  /* display: block; */
  background: #fff;
  position: fixed;
  z-index: 12;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  
}

/*支付二维码*/
.pay-box{
  position: absolute;
  width: 82%;
  left: 9%;
  top: 9%;
  background: #fff;
  border-radius: 13rpx;
  padding: 45rpx 40rpx 76rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.code-title{
  line-height: 56rpx;
  font-size: 40rpx;
  color: #111;
}
.code-disc{
  font-size: 27rpx;
  line-height: 47rpx;
  color: #555;
  padding: 35rpx 0 42rpx;
  word-break: break-all;
  border-bottom: 1px dashed #999;
  position: relative;
}
.code-disc::before{
  display: block;
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,.6);
  bottom: -18rpx;
  left: -58rpx;
  border-radius: 18rpx;
}
.code-disc::after{
  display: block;
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,.6);
  bottom: -18rpx;
  right: -58rpx;
  border-radius: 18rpx;
}

.code-disc1{
  font-weight: bold;
}
.code-disc2{
  color: #F5443F;
}


.code-pic{
  padding: 80rpx 0 35rpx;
  width: 278rpx;
  height: 278rpx;
  margin: 0 auto;
  position: relative;
}
.code-pic image{
  width: 100%;
  height: 100%;
}

.code-b{
  text-align: center;
  display: block;
}
