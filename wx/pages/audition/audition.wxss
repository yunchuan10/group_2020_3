
page{
  height: 100%;
  position: relative;
  background: #fff;
}

.audition-contain{
  height: 100%;
  position: relative;
  z-index: 2;
  padding-top: 420rpx;
  box-sizing: border-box;
}

.video-c{
  position: fixed;
  z-index: 6;
  top: 0;
  left: 0;
  width: 100%;
  height: 420rpx;
  background-color: #EFEFF4;
}

.video-c video{
  width: 100%;
  height: 100%;
}

.course-list{
  height: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
  padding: 100rpx 0 0;
  
}

.list-head{
  height: 100rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: absolute;
  z-index: 8;
  left: 0;
  top: 0;
  border-bottom: 1rpx solid #ddd;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-hl{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-hl image{
  width: 24rpx;
  height: 20rpx;
  margin-right: 20rpx;
}
.hl-title{
  font-size: 32rpx;
  color: #111;
}

.hl-count{
  font-size: 20rpx;
  color: #999;
  margin-left: 12rpx;
  margin-top: 10rpx;
}

.list-hr{
  display: flex;
  height: 100%;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
  align-items: center;
  padding-left: 20rpx;
}

.list-hr image{
  height: 20rpx;
  width: 20rpx;
  margin-left: 13rpx;
}


.list-c{
  padding: 0 40rpx;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  transition: height .4s;
}

.list-c.list-slide{
  overflow-y: hidden;
  height: 0;
}

.list-c>view{
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #d8d8d8;
  height: 160rpx;
  justify-content: space-between;
  align-items: center;
}

.item-l{
  margin-right: 20rpx;
  flex-shrink: 0;
  font-size: 32rpx;
  color: #777;
  font-style:italic;
}

.item-c{
  flex: 1;
  margin-right: 50rpx;
  overflow: hidden;
}

.item-c .item-t{
  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: #111;
}

.item-c .item-time{
  font-size: 24rpx;
  color: #999;
  margin-top: 18rpx;
}

.item-r{
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #2C8CFF;
  align-items: center;
}

.item-r .line-icon{
  width: 47rpx;
  height: 47rpx;
  display: none;
}

.item-r text{
  display: none;
}

.item-r .icon{
  width: 53rpx;
  height: 53rpx;
}

.sec .item-l{
  color: #2C8CFF;
}

.sec .item-c .item-t{
  color: #2C8CFF;
}

.sec .item-r .icon{
  display: none;
}

.sec .item-r .line-icon, .sec .item-r text{
  display: block;
}